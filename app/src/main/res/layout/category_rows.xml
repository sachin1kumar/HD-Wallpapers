<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:paddingBottom="30dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="#ffffff"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:orientation="horizontal" fresco:layout_constraintTop_toTopOf="parent"
            fresco:layout_constraintEnd_toEndOf="parent" fresco:layout_constraintStart_toStartOf="parent"
            fresco:layout_constraintBottom_toTopOf="@+id/tableLayout">

        <TextView
                android:id="@+id/myImageViewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello"
                android:textColor="#000000"
                android:layout_alignParentLeft="true"
                fresco:fontFamily="@font/ubuntu_light"/>

        <TextView
                android:layout_toRightOf="@+id/myImageViewText"
                android:id="@+id/seeall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_see_all"
                android:layout_alignParentRight="true"
                fresco:fontFamily="@font/ubuntu_light"
                android:textColor="#000000"
                android:gravity="right"
        />
    </RelativeLayout>

    <HorizontalScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tableLayout"
            fresco:layout_constraintEnd_toEndOf="parent" fresco:layout_constraintTop_toBottomOf="@+id/header"
            fresco:layout_constraintStart_toStartOf="parent"
            android:measureAllChildren="false"
            android:scrollbars="none">
        <LinearLayout
                android:id="@+id/innerLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

            <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/image_first"
                    android:layout_width="80dp"
                    fresco:actualImageScaleType="centerCrop"
                    android:layout_height="120dp"
                    fresco:fadeDuration="300"
                    android:src="@mipmap/alex_unsplash"
                    android:transitionName="1"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"/>
            <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/image_second"
                    android:layout_width="80dp"
                    fresco:actualImageScaleType="centerCrop"
                    android:transitionName="2"
                    android:layout_height="120dp"
                    fresco:fadeDuration="300"
                    android:src="@mipmap/alex_unsplash"
                    android:layout_marginRight="2dp"/>
            <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/image_third"
                    android:layout_width="80dp"
                    fresco:actualImageScaleType="centerCrop"
                    android:layout_height="120dp"
                    fresco:fadeDuration="300"
                    android:src="@mipmap/alex_unsplash"
                    android:transitionName="3"
                    android:layout_marginRight="2dp"/>
            <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/image_fourth"
                    android:layout_width="80dp"
                    fresco:actualImageScaleType="centerCrop"
                    android:layout_height="120dp"
                    fresco:fadeDuration="300"
                    android:transitionName="4"
                    android:src="@mipmap/alex_unsplash"
                    android:layout_marginRight="2dp"/>
            <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/image_fifth"
                    android:layout_width="80dp"
                    fresco:actualImageScaleType="centerCrop"
                    android:layout_height="120dp"
                    fresco:fadeDuration="300"
                    android:src="@mipmap/alex_unsplash"
                    android:transitionName="5"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"/>
            <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/image_sixth"
                    android:layout_width="80dp"
                    fresco:actualImageScaleType="centerCrop"
                    android:layout_height="120dp"
                    fresco:fadeDuration="300"
                    android:src="@mipmap/alex_unsplash"
                    android:transitionName="6"
                    android:layout_marginRight="2dp"/>
            <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/image_seventh"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    fresco:actualImageScaleType="centerCrop"
                    fresco:fadeDuration="300"
                    android:src="@mipmap/alex_unsplash"
                    android:transitionName="7"
                    android:layout_marginRight="2dp"/>
            <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/image_eigth"
                    android:layout_width="80dp"
                    fresco:actualImageScaleType="centerCrop"
                    android:layout_height="120dp"
                    fresco:fadeDuration="300"
                    android:transitionName="8"
                    android:src="@mipmap/alex_unsplash"
                    android:layout_marginRight="2dp"/>
        </LinearLayout>
    </HorizontalScrollView>

</android.support.constraint.ConstraintLayout>